# Server Configuration
NODE_ENV=development
PORT=8000
API_VERSION=v1
API_BASE_URL=http://localhost:8000

# Database
MONGODB_URI=mongodb://localhost:27017/pickle_paradise
MONGODB_DB_NAME=pickle_paradise
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Security
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_secure
JWT_REFRESH_SECRET=your_refresh_secret_key_here_different_from_main
JWT_EXPIRE=1h
JWT_REFRESH_EXPIRE=7d
JWT_RESET_EXPIRE=15m

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here
BCRYPT_ROUNDS=12

# Razorpay Payment Gateway
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# Email Service (Gmail/SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@pickles.com
FROM_NAME=Pickle Paradise

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_VERIFY_SERVICE_SID=your_verify_service_sid

# WhatsApp Business API
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_ID=your_whatsapp_phone_id
WHATSAPP_BUSINESS_ID=your_business_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# File Storage (AWS S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=pickle-paradise-assets
AWS_CLOUDFRONT_URL=https://your-cloudfront-domain.com

# AI Services
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
DIALOGFLOW_PROJECT_ID=your_dialogflow_project_id
DIALOGFLOW_PRIVATE_KEY=your_private_key
DIALOGFLOW_CLIENT_EMAIL=your_client_email

# External APIs
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
WEATHER_API_KEY=your_weather_api_key
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Shipping APIs
BLUEDART_API_KEY=your_bluedart_api_key
DELHIVERY_API_KEY=your_delhivery_api_key
DTDC_API_KEY=your_dtdc_api_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your_session_secret_key_here
SESSION_COOKIE_MAX_AGE=3600000

# Security
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://pickles.com

# Logging
LOG_LEVEL=info
LOG_FILE_ERROR=logs/error.log
LOG_FILE_COMBINED=logs/combined.log

# Business Configuration
COMPANY_NAME=Pickle Paradise
COMPANY_ADDRESS=123 Pickle Street, Spice City, India
COMPANY_GSTIN=22AAAAA0000A1Z5
COMPANY_PAN=AAAAA0000A
COMPANY_EMAIL=info@pickles.com
COMPANY_PHONE=+91-9876543210
COMPANY_WEBSITE=https://pickles.com

# Invoice Configuration
INVOICE_PREFIX=INV
INVOICE_SERIES_START=1001
AUTO_INVOICE_EMAIL=true
AUTO_INVOICE_WHATSAPP=true

# Notification Settings
EMAIL_QUEUE_DELAY=5000
SMS_QUEUE_DELAY=3000
WHATSAPP_QUEUE_DELAY=10000

# Cache Settings
CACHE_TTL_DEFAULT=3600
CACHE_TTL_PRODUCTS=1800
CACHE_TTL_ORDERS=600
CACHE_TTL_USER_SESSIONS=7200

# Feature Flags
ENABLE_AI_CHATBOT=true
ENABLE_AUTO_INVOICE=true
ENABLE_REAL_TIME_CHAT=true
ENABLE_ANALYTICS=true
ENABLE_RECOMMENDATIONS=true
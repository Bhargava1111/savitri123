# Development Environment Configuration
NODE_ENV=development
PORT=8000
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/pickle_paradise
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=pickle_paradise_jwt_secret_key_for_development_only
JWT_REFRESH_SECRET=pickle_paradise_refresh_secret_key_for_development_only
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Session Configuration
SESSION_SECRET=pickle_paradise_session_secret_for_development

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug

# Company Information
COMPANY_NAME=Pickle Paradise
